<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="centralcpccommittee.shopwithfriends.AddFriendActivity">

    <EditText
        android:id="@+id/add_friend_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/add_friend_email"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_marginTop="63dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/add_friend_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/add_friend_username"
        android:imeOptions="actionUnspecified"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/add_friend_email"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Find Your Friends"
        android:id="@+id/add_friend_text"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find and Add"
        android:id="@+id/find_and_add_button"
        android:layout_below="@+id/add_friend_username"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="73dp"
        android:onClick="addFriendPressed" />
</RelativeLayout>
